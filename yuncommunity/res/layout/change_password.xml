<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout style="@style/single_view" >

        <TextView
            style="@style/form_left"
            android:text="原密码" />

        <EditText
            android:id="@+id/change_password_0"
            style="@style/form_right"
            android:hint="密码6-12位[不包括#$%^&amp;/*\~]"
            android:inputType="textPassword" />
    </LinearLayout>

    <LinearLayout style="@style/single_view" >

        <TextView
            style="@style/form_left"
            android:text="新密码" />

        <EditText
            android:id="@+id/change_password_1"
            style="@style/form_right"
            android:hint="密码6-12位[不包括#$%^&amp;/*\~]"
            android:inputType="textPassword" />
    </LinearLayout>

    <LinearLayout style="@style/single_view" >

        <TextView
            style="@style/form_left"
            android:text="新密码[再一次]" />

        <EditText
            android:id="@+id/change_password_2"
            style="@style/form_right"
            android:hint="密码6-12位[不包括#$%^&amp;/*\~]"
            android:inputType="textPassword" />
    </LinearLayout>

    <Button
        android:id="@+id/change_password_submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:text="提交"
        android:textColor="@color/white" />

</LinearLayout>